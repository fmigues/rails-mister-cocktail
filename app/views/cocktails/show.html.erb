<%= render "shared/navbar" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
        <% @cocktail.doses.each do |dose| %>
          <%= render 'list_doses', dose: dose %>
        <% end %>
          <%= render 'doses/form' %>
    </div>
  </div>
</div>
